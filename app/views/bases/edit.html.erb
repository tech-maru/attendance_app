<%= provide(:title, "@base.name") %>

<h2>拠点情報の修正</h2>
<%= form_with(model: @base, url: basis_path(@base), method: :patch, local: true) do |f| %>
<div class="form_container">
  <div class="form-group col-md-6 col-md-offset-3 ">
    <%= f.label :name, "拠点名" %>
    <%= f.text_field :name, class: "form-control", placeholder: "#{@base.name}" %>
  </div>
  <div class="form-group col-md-6 col-md-offset-3">
    <%= f.label :content, "拠点種類" %>
    <%= f.text_field :content, class: "form-control", placeholder: "#{@base.content}" %>
  </div>
  <div class="form-group col-md-6 col-md-offset-3">
  <%= f.submit "修正", class: "col-md-12 btn btn-primary" %>
  </div>
<% end %>
</div>